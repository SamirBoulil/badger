{% extends '@Gate/base-admin.html.twig' %}

{% block body %}
    <h1>Tag</h1>

    <table class="ui definition table">
        <tbody>
            <tr>
                <td>UUID</td>
                <td><pre>{{ tag.id }}</pre></td>
            </tr>
            <tr>
                <td>Name</td>
                <td>{{ tag.name }}</td>
            </tr>
            <tr>
                <td>Code</td>
                <td><pre>{{ tag.code }}</pre></td>
            </tr>
            <tr>
                <td>Created at</td>
                <td>{% if tag.createdAt %}{{ tag.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <div>
        {{ form_start(delete_form) }}
        <button class="ui red right floated button" type="submit">Delete</button>
        {{ form_end(delete_form) }}
        <a href="{{ path('admin_tag_edit', { 'id': tag.id }) }}" class="ui right floated button">Edit</a>
    </div>
{% endblock %}
