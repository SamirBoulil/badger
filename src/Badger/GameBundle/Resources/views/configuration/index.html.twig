{% extends 'GateBundle::base-admin.html.twig' %}

{% block body %}

<h1 class="page-header">Configuration list</h1>
<a href="{{ path('admin_configuration_form') }}" class="ui right floated small primary labeled icon button">
    <i class="plus icon"></i> Create Configuration
</a>

<div class="ui clearing" style="margin-top: 65px;">
    <table class="ui celled table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Code</th>
            <th>Value</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for configuration in configurations %}
            <tr>
                <td>
                    <h4 class="ui header">
                        <div class="content">
                            <a href="{{ path('admin_configuration_form', { 'id': configuration.id }) }}">{{ configuration.title }}</a>
                        </div>
                    </h4>
                </td>
                <td>{{ configuration.code }}</td>
                <td>{{ configuration.value|nl2br }}</td>
                <td class="center aligned">
                    <div class="ui small basic icon buttons">
                        <a href="{{ path('admin_configuration_form', { 'id': configuration.id }) }}" class="ui button"><i class="pencil icon"></i></a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
