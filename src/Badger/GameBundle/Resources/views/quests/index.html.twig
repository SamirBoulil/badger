{% extends 'GateBundle::base-admin.html.twig' %}

{% block body %}

<h1 class="page-header">Quest list</h1>
<a href="{{ path('admin_quest_new') }}" class="ui right floated small primary labeled icon button">
    <i class="plus icon"></i> Create Quest
</a>

<div class="ui three cards">
    {% for quest in quests %}
    <div class="card">
        <div class="blurring dimmable image" style="padding: 10px;">
            <div class="ui dimmer">
                <div class="content">
                    <div class="center">
                        <a href="{{ path('admin_quest_edit', { 'id': quest.id }) }}" class="ui inverted button">Edit</a>
                    </div>
                </div>
            </div>
            <img src="{{ quest.imageWebPath }}">
        </div>
        <div class="content">
            <div class="header">{{ quest.title }}</div>
            <div class="description">
                {{ quest.description }}
            </div>
        </div>
        <div class="extra content">
            <small><i class="icon code"></i> {{ quest.id }}</small>
        </div>
        {% if quest.tags|length > 0 %}
        <div class="extra content">
            {% for tag in quest.tags %}
                <span class="ui teal tiny label">{{ tag.name }}</span>
            {% endfor %}
        </div>
        {% endif %}
    </div>
    {% endfor %}
</div>
{% endblock %}

{% block javascripts %}
    <script>
        $('.cards .image').dimmer({
            on: 'hover'
        });
    </script>
{% endblock %}
