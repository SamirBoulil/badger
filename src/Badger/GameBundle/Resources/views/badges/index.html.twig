{% extends 'GateBundle::base-admin.html.twig' %}

{% block body %}
    <div class="page-header page-header-default">
        <div class="breadcrumb-line" style="border-bottom: 0; z-index: 5;"><a class="breadcrumb-elements-toggle"><i class="icon-menu-open"></i></a>
            <ul class="breadcrumb">
                <li><a href="{{ path('admin') }}"><i class="icon-home2 position-left"></i> Admin</a></li>
                <li class="active"><i class="icon-medal2"></i> Badges</li>
            </ul>
        </div>
    </div>

    <div class="panel panel-flat m-15">
        <div class="table-responsive">
            <table class="table datatable-basic">
                <thead>
                <tr>
                    <th>Picture</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Tagged in</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for badge in badges %}
                    <tr>
                        <td>
                            <img src="{{ badge.imageWebPath }}" class="img-responsive img-rounded media-preview">
                        </td>
                        <td>
                            <h4>
                                <a href="{{ path('admin_badge_show', { 'id': badge.id }) }}">{{ badge.title }}</a>
                            </h4>
                        </td>
                        <td>
                            {{ badge.description|nl2br }}
                        </td>
                        <td>
                            {% for tag in badge.tags %}
                                <span class="label label-default position-right">{{ tag.name }}</span>
                            {% endfor %}
                        </td>
                        <td class="center aligned">
                            <ul class="icons-list">
                                <li class="text-primary-600"><a href="{{ path('admin_badge_edit', { 'id': badge.id }) }}"><i class="icon-pencil7"></i></a></li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/gate/js/plugins/tables/datatables/datatables.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/gate/js/plugins/tables/datatables_basic.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/gate/js/plugins/forms/selects/select2.min.js') }}"></script>
{% endblock %}
