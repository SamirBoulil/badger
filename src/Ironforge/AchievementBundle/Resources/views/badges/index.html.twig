{% extends 'GateBundle::base-admin.html.twig' %}

{% block body %}

<h1 class="page-header">Badge list</h1>
<a href="{{ path('admin_badge_new') }}" class="ui right floated small primary labeled icon button">
    <i class="plus icon"></i> Create Badge
</a>

<div class="ui three cards">
    {% for badge in badges %}
    <div class="card">
        <div class="blurring dimmable image" style="padding: 10px;">
            <div class="ui dimmer">
                <div class="content">
                    <div class="center">
                        <a href="{{ path('admin_badge_edit', { 'id': badge.id }) }}" class="ui inverted button">Edit</a>
                    </div>
                </div>
            </div>
            <img src="{{ badge.imageWebPath }}">
        </div>
        <div class="content">
            <div class="header">{{ badge.title }}</div>
            <div class="description">
                {{ badge.description }}
            </div>
        </div>
        <div class="extra content">
            <small><i class="icon code"></i> {{ badge.id }}</small>
        </div>
        {% if badge.tags|length > 0 %}
        <div class="extra content">
            {% for tag in badge.tags %}
                <span class="ui teal tiny label">{{ tag.name }}</span>
            {% endfor %}
        </div>
        {% endif %}
    </div>
    {% endfor %}
</div>
{% endblock %}

{% block javascripts %}
    <script>
        $('.cards .image').dimmer({
            on: 'hover'
        });
    </script>
{% endblock %}
